<div class="big-container">
<div class="child-login-form">
  {{#simple-form class="form-field" onsubmit=(action loginChild) as |formValues|}}
    <h2>Child Login</h2>
    <p class="form-inputs">
      <label class="input-label">Email:</label>
      {{input class="input-field" type="text" placeholder="Email" value=formValues.email}}
    </p>

    <p class="form-field">
      <label class="input-label">Password:</label>
      {{input class="input-field" type="password" placeholder="Password" value=formValues.password}}
    </p>


    <button class="waves-effect waves-light btn">Log In</button>

  {{/simple-form}}
</div>

<div class="child-pic">
  <img src="https://themesseduphome.files.wordpress.com/2015/07/kids-chore1.jpg" alt="">
</div>
</div>
