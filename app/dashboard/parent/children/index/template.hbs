<h2>Add New Child</h2>
{{#link-to "dashboard.parent.children.new"}}New Child{{/link-to}}

<table>
  <thead>
    <tr>
      <th>UserName</th>
      <th>Email</th>
      <th>Password</th>
      <th>Avatar</th>
      <th>PointTotal</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |child|}}
      <tr>
        <td>{{child.username}}</td>
        <td>{{child.email}}</td>
        <td>{{child.password}}</td>
        <td>{{child.avatar}}</td>
        <td>{{child.pointTotal}}</td>


        <td>
          {{#link-to "dashboard.parent.children.detail" child.id}}
          View Details
          {{/link-to}}
        </td>
        <td>
          {{#link-to "dashboard.parent.children.edit" child.id}}
          <span class="fa fa-pencil"></span>
          {{/link-to}}
        </td>
        <td>
          <button class="button" {{action delete child}}>
            <span class="fa fa-trash"></span>
          </button>
        </td>
      </tr>

    {{/each}}
  </tbody>
</table>
