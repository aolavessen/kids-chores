<h1>Add Children</h1>

{{#simple-form onsubmit=(action addChild) as |formValues|}}
  {{input placeholder="Username" value=formValues.username}}
  {{input placeholder="Email" value=formValues.email}}
  {{input placeholder="Password" value=formValues.password}}

  <p>
    <button class="btn waves-effect waves-light" type="submit" name="action">Submit
    <i class="material-icons right">send</i>
    </button>
  </p>
{{/simple-form}}
