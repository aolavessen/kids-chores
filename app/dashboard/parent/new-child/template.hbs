<div class="boss-container">
  <div class="child-info">
    <form class="form-field" {{action newChild model on="submit"}}>
      <p class="form-inputs">
        <label class="input-label">Username:</label>
        {{input class="input-field" type="text" placeholder="Username" value=model.username}}
      </p>

      <p class="form-inputs">
        <label class="input-label">Password:</label>
        {{input class="input-field" type="password" placeholder="Password" value=model.password}}
      </p>

      <p class="form-inputs">
        <label class="input-label">Point-Total:</label>
        {{input class="input-field" type="number" placeholder="Point-Total" value=model.point-total}}
      </p>

      <p class="form-inputs">
        <label class="input-label">Chore:</label>
        {{input class="input-field" type="text" placeholder="Chore" value=model.chore}}
      </p>

    </form>
    {{#link-to "dashboard.parent"}}
    <button>Submit</button>
    {{/link-to}}

  </div>
</div>


{{outlet}}
